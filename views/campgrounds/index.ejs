<% layout('layout/boilerplate') %> 
<title>All campgrounds</title>
</head>
<body>
    <!-- <h1 class="mb-5">All Campgrounds</h1> -->
 
        <a href="/campgrounds/new"><button class="btn btn-info mb-4 mt-5">Create New Campground!!</button></a>




    <% for(let campground of Campgrounds) { %>
        <div class="card mb-3 mt-5 " style="width:18rem; height:36rem">
            <div class="row">
                <div class="col-md-4">
                   <img class="img-fluid" src="<%= campground.images[0].url %> " alt=""> 
                </div>
                    <div class="col-md-8">
                        <div class="card-body">
                          <h5 class="card-title"><%= campground.title %> </h5>
                          <p class="card-text"><%= campground.description %></p>
                          <p class="card-text">
                              <smal class="text-muted"><%= campground.location %></smal>
                          </p>
                          <p class="card-text"><%= campground.price %> JD</p>
                          <a href="/campgrounds/<%= campground._id %> " class="btn btn-info">More Details</a>
                        </div>
                      
                </div>
            </div>

        </div>
    <% } %>













